<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
    <!-- Suppress Javadoc checks for test files -->
    <suppress checks="Javadoc.*" files=".*/src/test/java/.*"/>

    <!-- Suppress JavadocPackage for main source files (no package-info.java required) -->
    <suppress checks="JavadocPackage" files=".*/src/main/java/.*"/>

    <!-- Suppress JavadocMethod for DTO classes (simple getters/setters) -->
    <suppress checks="JavadocMethod" files=".*/dto/.*DTO\.java"/>

    <!-- Suppress JavadocType for DTO classes -->
    <suppress checks="JavadocType" files=".*/dto/.*DTO\.java"/>
</suppressions>
