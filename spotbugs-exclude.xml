<FindBugsFilter>
    <!-- Exclude DTO classes from certain checks as they are simple data holders -->
    <Match>
        <Class name="~org\.wso2\.apim\.policies\.mediation\.ai\.cbr\.dto\..*"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>

    <!-- Exclude unchecked cast warnings for transport headers map -->
    <Match>
        <Class name="org.wso2.apim.policies.mediation.ai.cbr.ContentBasedModelRouter"/>
        <Method name="extractParameterValue"/>
        <Bug pattern="BC_UNCONFIRMED_CAST"/>
    </Match>
</FindBugsFilter>
